comment "--- system inspection interface configurations ---"

config SDK_PLATFORM_SYSTEM_INSPECTION_INTERFACE_ENABLE
    bool "enable system inspection interface component"
    default y
    help
        Enables system inspection interface component, which gives deep reach
        to the the system at the low level for inspection purposes.

config SDK_PLATFORM_SYSTEM_INSPECTION_MEMORY_DUMP_ENABLE
    bool "enable memory dumping utility"
    default y
    help
        Enables a memory dump utility

config SDK_PLATFORM_SYSTEM_INSPECTION_PERIPH_POWER_ENABLE
    bool "enable periphiral power on/off"
    default y
    help
        Enables microcontroller peripherals power on/off.

